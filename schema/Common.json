{
    "$schema":"http://json-schema.org/draft-07/schema",
    "title":"Common",
    "definitions":{
       "IdentityDetails":{
          "type":"object",
          "title":"Identity Details",
          "description":"Identity Details",
          "required":[
             
          ],
          "properties":{
             "fullName":{
                "$id":"#/properties/fullName",
                "type":"string",
                "title":"Full name"
             },
             "gender":{
                "$id":"#/properties/gender",
                "type":"string",
                "enum":[
                   "Male",
                   "Female",
                   "Other"
                ],
                "title":"Gender"
             },
             "dob":{
                "$id":"#/properties/dob",
                "type":"string",
                "format":"date",
                "title":"DOB"
             },
             "uhid":{
                "$id":"#/properties/uhid",
                "type":"string",
                "title":"UHID"
             },
             "identityHolder":{
                "$id":"#/properties/identityHolder",
                "type":"object",
                "title":"National Identity",
                "properties":{
                   "type":{
                      "type":"string",
                      "$comment":"Nationality",
                      "title":"ID Type",
                      "enum":[
                         "Aadhar",
                         "PAN",
                         "License"
                      ]
                   },
                   "value":{
                      "type":"string",
                      "$comment":"Nationality",
                      "title":"ID Value"
                   }
                }
             }
          }
       },
       "BloodBankDetails":{
          "type":"object",
          "title":"Blood Bank Details",
          "properties":{
             "numberOfUnits":{
                "type":"number",
                "title":"No of units of each blood group"
             },
             "bloodGroup":{
                "type":"string",
                "title":"Blood Group"
             },
             "plasmaUnits":{
                "type":"number",
                "title":"Plasma Units"
             },
             "plateletsUnits":{
                "type":"string",
                "title":"Plateletes Unit"
             }
          }
       }
    },
    "DonationDetails":{
       "type":"object",
       "title":"Donation details",
       "plasmaDonation":{
          "$id":"#/properties/plasmaDonation",
          "type":"boolean",
          "title":"Plasma Donation"
       },
       "plateletesDonation":{
          "$id":"#/properties/plateletesDonation",
          "type":"boolean",
          "title":"Platelates Donation"
       },
       "dateOfDonation":{
          "$id":"#/properties/dateOfDonation",
          "type":"date",
          "title":"Date of donation"
       },
       "center":{
          "$id":"#/properties/center",
          "type":"date",
          "title":"Blood donation center"
       },
       "plateletCount":{
          "$id":"#/properties/plateletCount",
          "type":"number",
          "title":"Platelet Count"
       },
       "donorVitals":{
          "$id":"#/properties/donorVitals",
          "type":"string",
          "title":"Donor Vitals"
       }
    },
    "MedicalDetails":{
       "type":"object",
       "title":"Medical details",
       "properties":{
          "weight":{
             "$id":"#/properties/weight",
             "type":"number",
             "title":"Weight"
          },
          "height":{
             "$id":"#/properties/weight",
             "type":"number",
             "title":"Height"
          },
          "bloodGroup":{
             "$id":"#/properties/bloodGroup",
             "type":"string",
             "title":"Blood Group",
             "enum":[
                "A+ve",
                "A-ve",
                "O+ve",
                "O-ve"
             ]
          },
          "plasmaDonor":{
             "$id":"#/properties/plasmaDonor",
             "type":"boolean",
             "title":"Plasma Donor Type"
          },
          "plateletesDonor":{
             "$id":"#/properties/plateletesDonor",
             "type":"boolean",
             "title":"Platelates donor Type"
          },
          "available":{
             "$id":"#/properties/available",
             "type":"boolean",
             "title":"Available for donation"
          }
       }
    },
    "ContactDetails":{
       "type":"object",
       "title":"Contact Details",
       "description":"Contact Details",
       "required":[
          
       ],
       "properties":{
          "email":{
             "$id":"#/properties/email",
             "type":"string",
             "title":"Email"
          },
          "mobile":{
             "$id":"#/properties/mobile",
             "type":"string",
             "title":"Mobile"
          },
          "address":{
             "$id":"#/properties/address",
             "$ref":"#/definitions/Address",
             "title":"Address"
          }
       }
    },
    "Address":{
       "type":"object",
       "required":[
          
       ],
       "properties":{
          "plot":{
             "type":"string",
             "title":"Plot"
          },
          "street":{
             "type":"string",
             "title":"Street"
          },
          "landmark":{
             "type":"string",
             "title":"Landmark"
          },
          "locality":{
             "type":"string",
             "title":"Locality"
          },
          "state":{
             "type":"string",
             "title":"State",
             "enum":[
                "Andaman and Nicobar Islands",
                "Andhra Pradesh",
                "Arunachal Pradesh",
                "Assam",
                "Bihar",
                "Chandigarh",
                "Chhattisgarh",
                "Dadra and Nagar Haveli",
                "Daman and Diu",
                "Delhi",
                "Goa",
                "Gujarat",
                "Haryana",
                "Himachal Pradesh",
                "Jammu and Kashmir",
                "Jharkhand",
                "Karnataka",
                "Kerala",
                "Ladakh",
                "Lakshadweep",
                "Madhya Pradesh",
                "Maharashtra",
                "Manipur",
                "Meghalaya",
                "Mizoram",
                "Nagaland",
                "Odisha",
                "Puducherry",
                "Punjab",
                "Rajasthan",
                "Sikkim",
                "Tamil Nadu",
                "Telangana",
                "Tripura",
                "Uttar Pradesh",
                "Uttarakhand",
                "West Bengal"
             ]
          },
          "district":{
             "type":"string",
             "title":"District"
          },
          "village":{
             "type":"string",
             "title":"Village/Town/City"
          },
          "pincode":{
             "type":"string",
             "title":"Pincode"
          }
       }
    }
 }